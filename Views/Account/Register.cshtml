@model ElectroShop.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="flex justify-center">
            <svg class="h-12 w-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
        </div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Tạo tài khoản mới
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Hoặc
            <a href="@Url.Action("Login")" class="font-medium text-blue-600 hover:text-blue-500">
                đăng nhập vào tài khoản có sẵn
            </a>
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md fade-in-up">
        <div class="bg-white py-8 px-4 shadow-strong sm:rounded-lg sm:px-10 glass">
            <form method="post" asp-action="Register" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700">
                        Họ và tên
                    </label>
                    <div class="mt-1">
                        <input asp-for="Name" type="text" autocomplete="name" required
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">
                        Email
                    </label>
                    <div class="mt-1">
                        <input asp-for="Email" type="email" autocomplete="email" required
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Phone" class="block text-sm font-medium text-gray-700">
                        Số điện thoại (tùy chọn)
                    </label>
                    <div class="mt-1">
                        <input asp-for="Phone" type="tel" autocomplete="tel"
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <span asp-validation-for="Phone" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Address" class="block text-sm font-medium text-gray-700">
                        Địa chỉ (tùy chọn)
                    </label>
                    <div class="mt-1">
                        <textarea asp-for="Address" rows="2"
                                  class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"></textarea>
                        <span asp-validation-for="Address" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">
                        Mật khẩu
                    </label>
                    <div class="mt-1">
                        <input asp-for="Password" type="password" autocomplete="new-password" required
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">
                        Xác nhận mật khẩu
                    </label>
                    <div class="mt-1">
                        <input asp-for="ConfirmPassword" type="password" autocomplete="new-password" required
                               class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white gradient-blue hover:shadow-strong focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 ripple transition-all duration-300">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                            <svg class="h-5 w-5 text-blue-500 group-hover:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6z" />
                            </svg>
                        </span>
                        Đăng ký
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}