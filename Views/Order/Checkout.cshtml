@model ElectroShop.Models.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Thanh toán</h1>

        <form asp-action="ProcessOrder" method="post" class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Shipping Information -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Thông tin giao hàng</h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="ShippingInfo.Name" class="block text-sm font-medium text-gray-700 mb-2">Họ và tên *</label>
                            <input asp-for="ShippingInfo.Name" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required />
                            <span asp-validation-for="ShippingInfo.Name" class="text-red-500 text-sm"></span>
                        </div>
                        
                        <div>
                            <label asp-for="ShippingInfo.Phone" class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại *</label>
                            <input asp-for="ShippingInfo.Phone" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required />
                            <span asp-validation-for="ShippingInfo.Phone" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <label asp-for="ShippingInfo.Address" class="block text-sm font-medium text-gray-700 mb-2">Địa chỉ *</label>
                        <input asp-for="ShippingInfo.Address" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required />
                        <span asp-validation-for="ShippingInfo.Address" class="text-red-500 text-sm"></span>
                    </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                        <div>
                            <label asp-for="ShippingInfo.City" class="block text-sm font-medium text-gray-700 mb-2">Thành phố *</label>
                            <select asp-for="ShippingInfo.City" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                                <option value="">Chọn thành phố</option>
                                <option value="TP.HCM">TP. Hồ Chí Minh</option>
                                <option value="Hà Nội">Hà Nội</option>
                                <option value="Đà Nẵng">Đà Nẵng</option>
                                <option value="Cần Thơ">Cần Thơ</option>
                                <option value="Hải Phòng">Hải Phòng</option>
                            </select>
                            <span asp-validation-for="ShippingInfo.City" class="text-red-500 text-sm"></span>
                        </div>
                        
                        <div>
                            <label asp-for="ShippingInfo.District" class="block text-sm font-medium text-gray-700 mb-2">Quận/Huyện *</label>
                            <input asp-for="ShippingInfo.District" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" required />
                            <span asp-validation-for="ShippingInfo.District" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Payment Method -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Phương thức thanh toán</h2>
                    
                    <div class="space-y-3">
                        <label class="flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50">
                            <input type="radio" asp-for="PaymentMethod" value="cod" class="text-blue-600 focus:ring-blue-500" checked />
                            <div class="ml-3">
                                <div class="font-medium text-gray-900">Thanh toán khi nhận hàng (COD)</div>
                                <div class="text-sm text-gray-500">Thanh toán bằng tiền mặt khi nhận hàng</div>
                            </div>
                        </label>
                        
                        <label class="flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50">
                            <input type="radio" asp-for="PaymentMethod" value="bank_transfer" class="text-blue-600 focus:ring-blue-500" />
                            <div class="ml-3">
                                <div class="font-medium text-gray-900">Chuyển khoản ngân hàng</div>
                                <div class="text-sm text-gray-500">Chuyển khoản qua ngân hàng</div>
                            </div>
                        </label>
                        
                        <label class="flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50">
                            <input type="radio" asp-for="PaymentMethod" value="e_wallet" class="text-blue-600 focus:ring-blue-500" />
                            <div class="ml-3">
                                <div class="font-medium text-gray-900">Ví điện tử</div>
                                <div class="text-sm text-gray-500">Thanh toán qua MoMo, ZaloPay, VNPay</div>
                            </div>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow-md p-6 sticky top-24">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Đơn hàng của bạn</h2>
                    
                    <div class="space-y-4 mb-6">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="flex items-center space-x-3">
                                <img src="@item.Product.Image" alt="@item.Product.Name" class="w-12 h-12 object-cover rounded" />
                                <div class="flex-1">
                                    <h4 class="text-sm font-medium text-gray-900">@item.Product.Name</h4>
                                    <p class="text-sm text-gray-500">Số lượng: @item.Quantity</p>
                                </div>
                                <span class="text-sm font-semibold">
                                    @item.Total.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                </span>
                            </div>
                        }
                    </div>
                    
                    <div class="border-t pt-4 space-y-2">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Tạm tính:</span>
                            <span class="font-semibold">@Model.Total.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Phí vận chuyển:</span>
                            <span class="font-semibold">Miễn phí</span>
                        </div>
                        <div class="flex justify-between text-lg font-bold border-t pt-2">
                            <span>Tổng cộng:</span>
                            <span class="text-blue-600">@Model.Total.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                        </div>
                    </div>
                    
                    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors mt-6">
                        Đặt hàng
                    </button>
                    
                    <a href="@Url.Action("Index", "Cart")" class="block w-full text-center border border-gray-300 hover:border-gray-400 text-gray-700 font-semibold py-3 px-6 rounded-lg transition-colors mt-3">
                        Quay lại giỏ hàng
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}