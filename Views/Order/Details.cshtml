@model ElectroShop.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-6">
            <a href="@Url.Action("Index")" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Quay lại danh sách đơn hàng
            </a>
        </div>

        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-blue text-white p-6">
                <div class="flex justify-between items-start">
                    <div>
                        <h1 class="text-2xl font-bold mb-2">Đơn hàng #@Model.Id.Substring(0, 8)</h1>
                        <p class="text-blue-100">Ngày đặt: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="text-right">
                        <span class="inline-flex px-4 py-2 text-sm font-medium rounded-full 
                            @(Model.Status == "pending" ? "bg-yellow-500 text-white" :
                              Model.Status == "confirmed" ? "bg-blue-500 text-white" :
                              Model.Status == "shipping" ? "bg-purple-500 text-white" :
                              Model.Status == "delivered" ? "bg-green-500 text-white" :
                              "bg-red-500 text-white")">
                            @(Model.Status == "pending" ? "Chờ xác nhận" :
                              Model.Status == "confirmed" ? "Đã xác nhận" :
                              Model.Status == "shipping" ? "Đang giao" :
                              Model.Status == "delivered" ? "Đã giao" :
                              "Đã hủy")
                        </span>
                    </div>
                </div>
            </div>

            <div class="p-6">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
                    <!-- Shipping Information -->
                    <div>
                        <h2 class="text-xl font-semibold text-gray-900 mb-4">Thông tin giao hàng</h2>
                        <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                <span class="font-medium">@Model.ShippingInfo.Name</span>
                            </div>
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                                <span>@Model.ShippingInfo.Phone</span>
                            </div>
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-gray-400 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                <div>
                                    <div>@Model.ShippingInfo.Address</div>
                                    <div class="text-sm text-gray-600">@Model.ShippingInfo.District, @Model.ShippingInfo.City</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Information -->
                    <div>
                        <h2 class="text-xl font-semibold text-gray-900 mb-4">Thông tin thanh toán</h2>
                        <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                            <div class="flex items-center justify-between">
                                <span class="text-gray-600">Phương thức:</span>
                                <span class="font-medium">
                                    @(Model.PaymentMethod == "cod" ? "Thanh toán khi nhận hàng" :
                                      Model.PaymentMethod == "bank_transfer" ? "Chuyển khoản ngân hàng" :
                                      "Ví điện tử")
                                </span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span class="text-gray-600">Tổng tiền:</span>
                                <span class="text-xl font-bold text-blue-600">
                                    @Model.Total.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                </span>
                            </div>
                            <div class="flex items-center justify-between text-sm">
                                <span class="text-gray-600">Cập nhật lần cuối:</span>
                                <span>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Items -->
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Sản phẩm đã đặt</h2>
                    <div class="bg-gray-50 rounded-lg overflow-hidden">
                        @if (Model.Items != null && Model.Items.Any())
                        {
                            @foreach (var item in Model.Items)
                            {
                                <div class="p-4 border-b border-gray-200 last:border-b-0 bg-white mb-2 rounded-lg shadow-sm">
                                    <div class="flex items-center space-x-4">
                                        <img src="@item.Product.Image" alt="@item.Product.Name" 
                                             class="w-16 h-16 object-cover rounded-lg" />
                                        
                                        <div class="flex-1">
                                            <h3 class="font-semibold text-gray-900">@item.Product.Name</h3>
                                            <p class="text-sm text-gray-500">@item.Product.Code</p>
                                            <p class="text-sm text-gray-600">Số lượng: @item.Quantity</p>
                                        </div>
                                        
                                        <div class="text-right">
                                            <p class="text-sm text-gray-500">
                                                @item.Product.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN")) x @item.Quantity
                                            </p>
                                            <p class="font-semibold text-gray-900">
                                                @item.Total.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="p-8 text-center text-gray-500">
                                Không có thông tin sản phẩm
                            </div>
                        }
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="mt-8 bg-gray-50 rounded-lg p-6">
                    <div class="flex justify-between items-center text-lg">
                        <span class="font-semibold">Tổng cộng:</span>
                        <span class="font-bold text-blue-600 text-xl">
                            @Model.Total.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                        </span>
                    </div>
                </div>

                <!-- Actions -->
                <div class="mt-6 flex justify-between items-center">
                    <div>
                        @if (Model.Status == "pending")
                        {
                            <button onclick="cancelOrder('@Model.Id')" 
                                    class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition-colors ripple">
                                Hủy đơn hàng
                            </button>
                        }
                    </div>
                    
                    <div class="space-x-3">
                        <button onclick="window.print()" 
                                class="px-6 py-2 border border-gray-300 hover:border-gray-400 text-gray-700 font-medium rounded-lg transition-colors ripple">
                            In đơn hàng
                        </button>
                        <a href="@Url.Action("Index", "Products")" 
                           class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors ripple">
                            Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cancelOrder(orderId) {
            if (confirm('Bạn có chắc chắn muốn hủy đơn hàng này?')) {
                $.ajax({
                    url: '@Url.Action("CancelOrder")',
                    type: 'POST',
                    data: { orderId: orderId },
                    success: function(response) {
                        if (response.success) {
                            showNotification(response.message, 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showNotification(response.message, 'error');
                        }
                    },
                    error: function() {
                        showNotification('Có lỗi xảy ra. Vui lòng thử lại!', 'error');
                    }
                });
            }
        }
    </script>
}